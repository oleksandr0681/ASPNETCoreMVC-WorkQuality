                <div class="item__parameter">@Html.DisplayNameFor(model => model.Name)</div>
                <div class="item__value"><strong>@item.Name</strong></div>
                <div class="item__parameter">@Html.DisplayNameFor(model => model.Description)</div>
                <div class="item__value"><strong>@item.Description</strong></div>
            </div>
        </a>
        <div class="workLinks">
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Змінити</a>
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Вилучити</a>
        </div>
    </div>
